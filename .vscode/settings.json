{
    "phpcs.enable": true,
    "phpcs.ignorePatterns": [
        "bin/*",
        "config/*",
        "plugins/*",
        "resources/*",
        "src/Command/*",
        "src/Console/*",
        "src/Model/*",
        "src/View/*",
        "tmp*",
        "templates/*",
        "test/*",
        "vendor/*",
        "webroot/*",
        "index.php",
    ],
    "phpcs.standard": "vendor/cakephp/cakephp-codesniffer/CakePHP",
    "files.encoding": "utf8",
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
    },
    "[php]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": false,
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
    },
    // Other project settings
    "html.format.wrapAttributes": "force-aligned",
    "namespaceResolver.autoSort": true,
    "namespaceResolver.sortOnSave": true,
    "namespaceResolver.showMessageOnStatusBar": true,
    "namespaceResolver.highlightOnOpen": true,
    "namespaceResolver.sortAlphabetically": true,
    "phpmd.rules": "${workspaceFolder}/.vscode/phpmd/phpmd_config.xml",
}
